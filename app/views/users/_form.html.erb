<div class="form-group">
  <%= form.label :email, class: "control-label col-xs-2" %>
  <div class="col-xs-8">
    <div class="input-group email-fi">
      <%= form.text_field :email, type: "email", :placeholder => "email", class: "form-control" %>
      <div class="input-group-addon">
        <span class="glyphicon glyphicon-envelope"></span>
      </div>
    </div>
  </div>
</div>
<div class="form-group password-field">
  <%= form.label :password, class: "control-label col-xs-2" %>
  <div class="col-xs-8">
    <div class="input-group">
      <%= form.password_field :password, :placeholder => "password", class: "form-control" %>
      <div class="input-group-addon">
        <span class="glyphicon glyphicon-lock"></span>
      </div>
    </div>
  </div>
</div>
