<div class="daily_container">
  <div class="panel panel-info">
    <div class="daily panel-heading clearfix">
      <% if @events.empty? %>
        <p class="panel-title pull-left"><strong>No Events for current day</strong></p>
      <% else  %>
        <p class="panel-title pull-left"><strong>Events - <%= @date_string %></strong></p>
      <% end %>
    </div>
    <% if @events.empty? %>
      <div class="no_events">
        <h3>No Events found!</h3>
      </div>
    <% else %>
      <div class="list_daily panel-body">
        <table class="table table-hover table-condensed">
          <thead>
            <tr class="events_headers">
              <th>Title</th>
              <th>Text</th>
              <th>Starts</th>
              <th>Ends</th>
              <th>Date</th>
            </tr>
          </thead>
          <% @events.each do |ev| %>
          <tbody>
            <tr>
              <td><%= ev.title %></td>
              <td><%= ev.text %></td>
              <td>
                <%= ev.starttime_time %>
              </td>
              <td>
                <%= ev.endtime_time %>
              </td>
              <td>
                <%= parse_date(ev.endtime_date) %>
              </td>
              <td>
                <div class="btn_container pull-right">
                  <%= link_to event_path(ev),
                      id: "show_event_btn",
                      class: "btn btn-sm btn-info has-tooltip",
                      style: "color: white",
                      data: {title: 'Show details'} do %>Show
                  <% end %>
                  <%= content_tag(:span, Exercise.exercise_count(ev.id), class: "button badge") if Exercise.exercise_count(ev.id) > 0 %>
                </div>
              </td>
              <td>
                <%= link_to edit_event_path(ev),
                    class: "btn btn-sm btn-primary pull-right has-tooltip",
                    data: { title: 'Edit' } do %>
                  <i class="glyphicon glyphicon-edit"></i>
                <% end %>
              </td>
              <td>
                <%= link_to event_path(ev),
                    id: "deletion",
                    class: "btn btn-sm btn-danger pull-right has-tooltip",
                    method: :delete,
                    data: {
                          confirm: ' ',
                          title: 'Delete',
                          msg: 'Are you sure you want to delete this Event?'
                          } do %>
                  <i class="glyphicon glyphicon-trash"></i>
                <% end %>
              </td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    <% end %>
  </div>
  <!-- Navigation -->
  <div class="return_btn">
    <%= link_to 'Back to Calendar', calendar_path(:date => @date) , class: "btn btn-md btn-primary", style: "color: white" %>
  </div>
</div>

