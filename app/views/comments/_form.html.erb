<%= form_for([@event, @event.comments.build]) do |f| %>
  <div class="form-horizontal">
    <div class="form-group ">
      <div class="col-xs-offset-2 col-xs-9">
        <div class="input-group">
          <%= f.text_field :commenter, label:'Commenter', placeholder: 'Your name', class:'form-control', id:'commenter' %>
          <div class="input-group-addon">
            <span class="glyphicon glyphicon-user"></span>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group ">
      <div class="col-xs-offset-2 col-xs-9">
        <div class="input-group">
          <%= f.text_area :body, label:'Comment', placeholder: 'Write comment...', class:'form-control', id:'comment' %>
          <div class="input-group-addon">
            <span class="glyphicon glyphicon-pencil"></span>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-offset-2 col-xs-9">
        <%= f.submit "Add Comment", class: "btn btn-small btn-info", style: "color: white" %>
      </div>
    </div>
  </div>
<% end %>
