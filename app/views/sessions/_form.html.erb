<%= form_for :session, url: session_path do |form| %>
  <div class="form-group email-field">
    <%= form.label :email, class: "control-label col-xs-2" %>
    <div class="col-xs-8">
      <div class="input-group">
        <%= form.text_field :email, type: "email", :placeholder => "email", class: "form-control" %>
        <div class="input-group-addon">
          <span class="glyphicon glyphicon-envelope"></span>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group password_field">
    <%= form.label :password, class: "control-label col-xs-2" %>
    <div class="col-xs-8">
      <div class="input-group">
        <%= form.password_field :password, :placeholder => "password", class: "form-control" %>
        <div class="input-group-addon">
          <span class="glyphicon glyphicon-lock"></span>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group submit-field">
    <div class="col-xs-offset-2 col-xs-11">
      <%= form.submit class: "btn btn-small btn-success", style: "color: white" %>
    </div>
  </div>
  <div class="form-group">
    <div class="other-links col-xs-offset-2 col-xs-11">
      <% if Clearance.configuration.allow_sign_up? %>
        <p><%= link_to t(".sign_up"), sign_up_path %></p>
      <% end %>
      <p><%= link_to t(".forgot_password"), new_password_path %></p>
    </div>
  </div>
<% end %>
