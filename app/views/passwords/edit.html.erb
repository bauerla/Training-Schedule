<div id="clearance" class="password-reset">
  <div class="form-horizontal col-xs-8">
    <div class="col-xs-offset-1 col-xs-11">
      <h2><%= t(".title") %></h2>
      <p><%= t(".description") %></p>
      <br>
    </div>
    <%= form_for :password_reset,
          url: user_password_path(@user, token: @user.confirmation_token),
          html: { method: :put } do |form| %>
      <div class="form-group password-field">
        <%= form.label :password, class: "control-label col-xs-2" %>
        <div class="col-xs-8">
          <div class="input-group">
            <%= form.password_field :password, :placeholder => "password", class: "form-control" %>
            <div class="input-group-addon">
              <span class="glyphicon glyphicon-lock"></span>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group submit-field">
        <div class="col-xs-offset-2 col-xs-11">
          <%= form.submit class: "btn btn-small btn-success", style: "color: white" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
