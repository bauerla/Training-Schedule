<div id="clearance" class="password-reset">
  <div class="form-horizontal col-xs-8">
    <div class="col-xs-offset-1 col-xs-11">
      <h2><%= t(".title") %></h2>
      <p><%= t(".description") %></p>
      <br>
    </div>
    <%= form_for :password, url: passwords_path do |form| %>
      <div class="form-group password-field">
        <%= form.label :email, class: "control-label col-xs-2" %>
        <div class="col-xs-8">
          <div class="input-group">
            <%= form.text_field :email, type: "email", :placeholder => "email", class: "form-control" %>
            <div class="input-group-addon">
              <span class="glyphicon glyphicon-envelope"></span>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group submit-field">
        <div class="col-xs-offset-2 col-xs-11">
          <%= form.submit class: "btn btn-small btn-success", style: "color: white" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
