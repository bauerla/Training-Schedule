<div class="events_index panel panel-primary">

  <div class="events panel-heading clearfix">
    <p class="panel-title pull-left"><strong>All Events</strong></p>
    <div class="btn-group pull-right">
      <%= link_to new_event_path,
          class: "btn btn-md btn-success has-tooltip",
          data: {
            title: 'New Event',
            placement: 'right'
          } do %>
        <i style="font-size:2.0em;" class="glyphicon glyphicon-plus"></i>
      <% end %>
    </div>
  </div>

  <% if @events.empty? %>
    <div class="no_events">
      <h3>No Events found!</h3>
      <p>Add new events!</p>
    </div>
  <% else %>
    <div class="list_events panel-body">
      <table class="table table-hover table-condensed">
        <thead>
          <tr class="events_headers">
            <th>Title</th>
            <th>Text</th>
            <th>Start time</th>
            <th>End time</th>
          </tr>
        </thead>
        <% @events.each do |ev| %>
          <tbody>
            <tr>
              <td><%= ev.title %></td>
              <td><%= ev.text %></td>
              <td>
                <%= ev.starttime_time %>
                <%= ev.starttime_date %>
              </td>
              <td>
                <%= ev.endtime_time %>
                <%= ev.endtime_date %>
              </td>

              <td>
                <%= link_to 'Show', event_path(ev),
                  class: "btn btn-sm btn-info has-tooltip",
                  style: "color: white",
                  data: {title: 'Show details'} %>
              </td>
              <td>
                <%= link_to edit_event_path(ev),
                  class: "btn btn-sm btn-primary has-tooltip",
                  data: {
                    title: 'Edit'
                  } do %>
                  <i class="glyphicon glyphicon-edit"></i>
                <% end %>
              </td>
              <td>
                <%= link_to event_path(ev),
                  id: "deletion",
                  class: "btn btn-sm btn-danger has-tooltip",
                  method: :delete,
                  data: {
                        confirm: ' ',
                        title: 'Delete',
                        msg: 'Are you sure you want to delete this Event?'
                        } do %>
                    <i class="glyphicon glyphicon-trash"></i>
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  <% end %>
</div>

<!-- Navigation -->
<div class="return_btn">
    <%= link_to 'Back to Calendar', calendar_path, class: "btn btn-md btn-primary", style: "color: white" %>
  </div>

