<h1>All Events</h1>
<div class="events_index">

  <div class="add_new_event">
    <%= link_to 'New Event', new_event_path, class: "btn btn-md btn-success", style: "color: white" %>
  </div>
  <div class="list_events">
    <table>
      <tr class="events_headers">
        <th>Title</th>
        <th>Text</th>
        <th>Start time</th>
        <th>End time</th>
      </tr>
      <% @events.each do |ev| %>
        <tr>
          <td><%= ev.title %></td>
          <td><%= ev.text %></td>
          <td>
            <%= ev.starttime_time %>
            <%= ev.starttime_date %>
          </td>
          <td>
            <%= ev.endtime_time %>
            <%= ev.endtime_date %>
          </td>
          <td><%= link_to 'Show', event_path(ev), class: "btn btn-sm btn-primary", style: "color: white" %></td>
          <td><%= link_to 'Edit', edit_event_path(ev), class: "btn btn-sm btn-warning", style: "color: white"%></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="back_to_cal">
    <%= link_to 'Back to Calendar', calendar_path, class: "btn btn-md btn-primary", style: "color: white" %>
  </div>
  
</div>