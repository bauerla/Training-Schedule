<%= form_for :event, url: event_path(@event), method: :patch do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@event.errors.count, "error") %> prohibited
        this event from being saved:
      </h2>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <h3>Aloitus aika</h3>
  <div class="starttime_field">
    <p>
      <%= f.label :starttime %><br />
      <%= f.text_field :starttime_date, :placeholder => 'vvvv-kk-pp', :class => 'datepicker', :size => 10, :maxlength => 10 %>
      <%= f.text_field :starttime_time, :placeholder => 'hh:mm', :size => 5, :maxlength => 5 %>
    </p>
  </div>
  <h3>Lopetus aika</h3>
  <div class="endtime_field">
    <p>
      <%= f.label :endtime %><br />
      <%= f.text_field :endtime_date, :placeholder => 'vvvv-kk-pp', :class => 'datepicker', :size => 10, :maxlength => 10 %>
      <%= f.text_field :endtime_time, :placeholder => 'hh:mm', :size => 5, :maxlength => 5 %>
    </p>
    <p>
      <%= f.submit "Save Changes", class: "btn btn-small btn-success", style: "color: white"%>
    </p>
  </div>
  <p>
    <%= link_to 'Back', events_path, class: "btn btn-small btn-primary", style: "color: white"%>
  </p>
<% end %>