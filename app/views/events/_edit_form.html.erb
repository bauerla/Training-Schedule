<%= form_for :event, url: event_path(@event), :html => {:class => "form-horizontal", :role => "form"}, method: :patch do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@event.errors.count, "error") %> prohibited
        this event from being saved:
      </h2>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title, class: "col-xs-1 control-label" %>
    <div class="col-xs-5 col-sm-4">
      <%= f.text_field :title, type: "text", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :text, class: "col-xs-1 control-label" %>
    <div class="col-xs-5 col-sm-4">
      <%= f.text_area :text, type: "text", class: "form-control" %>
    </div>
  </div>
  <div class="starttime_field form-group">
    <h3 class="col-xs-offset-1 col-xs-11">Aloitus aika</h3>
    <%= f.label :starttime, class: "col-xs-2 col-sm-1 col-md-1 control-label" %>
    <div class="col-xs-2 col-sm-2 col-md-1">
      <%= f.text_field :starttime_time, :placeholder => 'hh:mm', :size => 5, :maxlength => 5 %>
    </div>
    <div class="col-xs-8 col-sm-9 col-md-10">
      <%= f.text_field :starttime_date, :placeholder => 'vvvv-kk-pp', :class => 'datepicker', :size => 10, :maxlength => 10 %>
    </div>
  </div>
  <div class="endtime_field form-group">
    <h3 class="col-xs-offset-1 col-xs-11">Lopetus aika</h3>
    <%= f.label :endtime, class: "col-xs-2 col-sm-1 col-md-1 control-label" %>
    <div class="col-xs-2 col-sm-2 col-md-1">
      <%= f.text_field :endtime_time, :placeholder => 'hh:mm', :size => 5, :maxlength => 5 %>
    </div>
    <div class="col-xs-8 col-sm-9 col-md-10">
      <%= f.text_field :endtime_date, :placeholder => 'vvvv-kk-pp', :class => 'datepicker', :size => 10, :maxlength => 10 %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-offset-1 col-xs-11">
      <%= f.submit "Save Changes", class: "btn btn-xsall btn-success", style: "color: white"%>
    </div>
    <div class="col-xs-offset-1 col-xs-11">
      <%= link_to 'Back', events_path, type: "submit", class: "btn btn-xsall btn-primary", style: "color: white"%>
    </div>
  </div>

<% end %>
