<div class="modal fade" id="mark_completed" tabindex="-1" role="dialog" aria-labelledby="completedModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <%= form_for :event, url: update_completed_path(event_id: @event.id), method: :get do |f| %>
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h3 class="modal-title" id="completedModalLabel">Details for compeleted training</h3>
      </div>
      <div class="modal-body row">
        <div class="form-horizontal">
          <div class="form-group">
            <div class="col-xs-offset-2" id="title">
              <h4><small><strong>Fill in some data about your training</strong></small></h4>
            </div>
          </div>
          <div class="form-group">
            <%= f.label "Summary", class: "control-label col-xs-2" %>
            <div class="col-xs-9">
              <div class="input-group">
                <%= f.text_area :done_summary, type: "text", :placeholder => "Write training summary - what's done and how it went...", class: "form-control" %>
                <div class="input-group-addon">
                  <span class="glyphicon glyphicon-pencil"></span>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <%= f.label "Additonal info", class: "control-label col-xs-2" %>
            <div class="col-xs-9">
              <div class="input-group">
                <%= f.text_area :done_additional, type: "text", :placeholder => "Any additional info regarding to training", class: "form-control" %>
                <div class="input-group-addon">
                  <span class="glyphicon glyphicon-pencil"></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-small btn-secondary" data-dismiss="modal">Close</button>
        <!-- <button type="button" class="btn btn-small btn-primary">Done</button> -->
        <%= f.submit "Done", class: "btn btn-small btn-success", style: "color: white" %>
      </div>
    </div>
    <% end -%>
  </div>
</div>
