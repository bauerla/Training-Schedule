<%= form_for([@event, @event.exercises.build]) do |f| %>
  <div class="input-group input-group-xs">
    <%= f.label "Description" %> <br>
    <%= f.text_area :desc, label:'Description', placeholder: 'Description of Exercise', class:'form-control' %>
    <br>
    <%= f.label "Duration" %> <br>
    <%= f.text_field :duration, label:'Duration (min)', placeholder: 'Minutes', class:'form-control' %>
    <br>
    <%= f.submit "Add Exercise", class: "btn btn-small btn-success", style: "color: white" %>

  </div>
<% end %>
